@page "/"
@using System.Security.Cryptography
@using System.Reflection
@using ncrypt.Domain
@using ncrypt.Library.Cipher
@using ncrypt.Server.Model

<PageTitle>ncrypt</PageTitle>

<div class="container">
    <div class="row">
        <div class="col">
            <RadzenCard>
                <RadzenDataList WrapItems="true" AllowPaging="false" Data="@models" TItem="GenericModel" PageSize="5" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true">
                    <Template Context="model">
                        <RadzenCard Style="width: 100%; padding: 0; overflow: hidden;">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-3 p-3 product-title">
                                                @(model.Name)
                                        </div>
                                        <div class="col-lg-7 p-3">
                                            <div class="row d-flex">
                                                <RadzenSelectBar TValue="String">
                                                    <Items>
                                                        @foreach(var method in model.ServiceMethods)
                                                        {
                                                            <RadzenSelectBarItem Text="@method.Name"/>
                                                        }                                                   
                                                    </Items>
                                                </RadzenSelectBar>
                                            </div>
                                            <div class="row d-flex">
                                                @foreach(var prop in model.Properties)
                                                {
                                                    <div>
                                                        <div class="col-md-6 col-lg-2">
                                                            <h5 class="mb-0">@(prop.Name)</h5>
                                                            @switch(prop.PropertyType.Name)
                                                            {
                                                                case "String": <RadzenTextBox></RadzenTextBox> break;                   
                                                                case "Int32": <RadzenNumeric TValue="int"></RadzenNumeric> break;
                                                                case "CipherMode": <RadzenDropDown TValue="String" Data=@modes /> break;                                                                
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 p-3">
                                            <RadzenButton Text="Order now" Class="w-100" />
                                        </div>
                                    </div>
                                </div>
                            </RadzenCard>
                        </Template>    
                </RadzenDataList>
            </RadzenCard>
        </div>
    </div>
</div>

<style>
.product-title {
    min-height: 72px;
    color: #da0074;
    background-color: rgba(255, 41, 155, .1);
    font-size: 20px;
    font-weight: bold;
    line-height: 20px;
    letter-spacing: -0.02em;
}
.price-badge {
    font-size: 16px;
    font-weight: bold;
    line-height: 20px;
    padding: 8px;
}
</style>

@code {
    List<GenericModel> models = new ();
    List<String> modes = Enum.GetNames(typeof(CipherMode)).ToList();

    protected override void OnInitialized ()
    {
        models = new ()
        {
            new ("AES", typeof (AESResult), typeof(AESService)),
            new ("RSA", typeof (RSAKeyPairResult), typeof(RSAService)),
        };        
    }
}